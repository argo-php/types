{
    "name": "argo-php/types",
    "description": "Extended type system for PHP",
    "type": "package",
    "authors": [
        {
            "name": "Babushkin Pavel",
            "email": "idarksoft@gmail.com"
        }
    ],
    "require": {
        "php": "8.3.*|8.4.*|8.5.*"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "Argo\\Types\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArgoTest\\Types\\": "tests/"
        }
    },
    "scripts": {
        "pint": "vendor/bin/pint",
        "psalm": "vendor/bin/psalm --output-format=phpstorm --no-cache"
    }
}
